@model MyAppointer.Models.OffDays

@{
    ViewBag.Title = "Edit";
}

<h2>Edit</h2>

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

    <fieldset>
        <legend>OffDays</legend>

        @Html.HiddenFor(model => model.Id)

        <div class="editor-label">
            @Html.LabelFor(model => model.WorkingTimesId, "WorkingTimes")
        </div>
        <div class="editor-field">
            @Html.DropDownList("WorkingTimesId", String.Empty)
            @Html.ValidationMessageFor(model => model.WorkingTimesId)
        </div>

        <div class="editor-label">
            @Html.LabelFor(model => model.OffDay)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.OffDay)
            @Html.ValidationMessageFor(model => model.OffDay)
        </div>

        <p>
            <input type="submit" value="Save" />
        </p>
    </fieldset>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
